<Application x:Class="KinoVideoProkat_K.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KinoVideoProkat_K"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"  Value="Calibri Light" />
            <Setter Property="Foreground"  Value="#c55a11" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background"  Value="#B2E2CC" />
            <Setter Property="Foreground"  Value="White" />
        </Style>
        

        <Style TargetType="TextBlock" x:Key="TBzagol">
            <Setter Property="FontSize" Value="25" />
            <Setter Property="FontFamily"  Value="Calibri Light" />
            <Setter Property="Foreground"  Value="#c55e11" />
        </Style>
        <Style TargetType="Button" x:Key="BtnEdit">
            <Setter Property="Width"  Value="25" />
            <Setter Property="Height"  Value="25" />
            <Setter Property="Margin" Value="0 0 5 10" />
        </Style>
        <Style TargetType="ListView" x:Key="LVOtdel">
            <Setter Property="Height"  Value="250" />
        </Style>
    </Application.Resources>
</Application>
